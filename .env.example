# TravelPay402 Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Your Solana Wallet Address
# ===========================================
MERCHANT_WALLET=YourActualMerchantWalletAddressHere123456789

# ===========================================
# Solana RPC Configuration
# ===========================================
# Default: Public mainnet (rate limited)
# Recommended: Use QuickNode, Helius, or Alchemy for production
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# RPC Resilience Settings
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY_SECONDS=1.0

# ===========================================
# Pricing Configuration
# ===========================================
PRICE_PER_REQUEST_USD=0.05
WELCOME_BONUS_USD=2.00

# SOL/USD Exchange Rate (update regularly or use oracle)
SOL_USD_PRICE=150.00

# Subscription notification price
SUBSCRIPTION_PRICE_USD=0.20

# ===========================================
# Server Configuration
# ===========================================
PORT=8000
HOST=0.0.0.0

# ===========================================
# UPDATE 5: Redis Configuration
# ===========================================
# Redis URL for high-performance caching
REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds (default: 5 minutes)
CACHE_TTL_SECONDS=300

# Subscription check interval in seconds
SUBSCRIPTION_CHECK_INTERVAL=60

# ===========================================
# UPDATE 5: Oracle Configuration
# ===========================================
# Ed25519 private key for signing responses (hex-encoded)
# If not set, a new keypair is generated on startup
# IMPORTANT: Persist this key for production to maintain key continuity!
# ORACLE_PRIVATE_KEY=your_64_char_hex_private_key_here

# ===========================================
# Token Configuration (Optional)
# ===========================================
# USDC Mint Address (Mainnet) - auto-detected from RPC URL
# USDC_MINT_MAINNET=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
# USDC Mint Address (Devnet - for testing)
